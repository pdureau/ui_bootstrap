{% if with_container %}
  <div class="container">
{% endif %}

{% set attributes = no_gutters ? attributes.addClass('no-gutters') : attributes %}

<div{{ attributes.addClass('row') }}>
  {% for item in content %}
    {% set col_sizes = cycle(cols_sizes_cycle, loop.index0) %}
    <div{{ create_attribute({'class': col_sizes}) }}>
      {{ item }}
    </div>
  {% endfor %}
</div>

{% if with_container %}
  </div>
{% endif %}
